class Solution {
    public int longestConsecutive(int[] nums) {
        HashSet<Integer> st = new HashSet<>();
        // adding array element in hashset , it will remove all duplicate elements
        for(int i=0;i<nums.length;i++){
            st.add(nums[i]);
        }
        int currNum = 0;
        int count = 0;
        int Maxcount = 0;
        // now traverse Hashset to check Starting element
        for(var num : st){
            if(!st.contains(num-1)){ //if it doesn't contains previous 
//              element it is stating element
                currNum = num;
                count =1;
                while(st.contains(currNum+1)){ //checks if next consecutive of start element exists or not  
                     count++;
                     currNum++;
                }
                if(Maxcount<count) Maxcount = count;

            }
        }
         return Maxcount;
    }
}
